<p id="notice"><%= notice %></p>

<h1>Attentions</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @attentions.each do |attention| %>
      <tr>
        <td><%= attention.content %></td>
        <td><%= link_to 'Show', attention %></td>
        <td><%= link_to 'Edit', edit_attention_path(attention) %></td>
        <td><%= link_to 'Destroy', attention, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Attention', new_attention_path %>
