<div class="sleep_hour">
  <%= week_calendar number_of_weeks: 1, events: @diaries do |date, diaries| %>
    <%= date %>

    <% diaries.each do |diary| %>
      <h2><%= link_to "#{diary.sleep_hour}時間睡眠", diary %></h2>
    <% end %>
  <% end %>
