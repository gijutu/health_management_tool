      <%= link_to image_tag("mark_face_smile.png", size: "75x75"), diary %>
    <% end %>
    <% if diary.day_icon == '元気' %>
      <%= link_to image_tag("mark_face_hehe.png", size: "75x75"), diary %>
    <% end %>
    <% if diary.day_icon == '憂うつ' %>
      <%= link_to image_tag("mark_face_ase.png", size: "75x75"), diary %>
    <% end %>
    <% if diary.day_icon == 'とても元気' %>
      <%= link_to image_tag("mark_face_tere.png", size: "75x75"), diary %>
    <% end %>
    <% if diary.day_icon == 'とても憂うつ' %>
      <%= link_to image_tag("mark_face_cry.png", size: "75x75"), diary %>
    <% end %>
  <% end %>

<% end %>

<h1>週カレンダーB</h1>
<%= week_calendar number_of_weeks: 1, events: @diaries do |date, diaries| %>
  <%= date %>

  <% diaries.each do |diary| %>
    <h2><%= link_to "#{diary.sleep_label}", diary %></h2>
    <h2><%= link_to "#{diary.sleep_hour}時間", diary %></h2>
  <% end %>
<% end %>
