<p id="notice"><%= notice %></p>

<p>
  <strong>今日の1日の気分</strong>
  <p><%= @diary.day_icon %></p>
  <% if @diary.day_icon == '普通' %>
    <%= image_tag("mark_face_smile.png", size: "75x75") %>
  <% end %>
  <% if @diary.day_icon == '元気' %>
    <%= image_tag("mark_face_hehe.png", size: "75x75") %>
  <% end %>
  <% if @diary.day_icon == '憂うつ' %>
    <%= image_tag("mark_face_ase.png", size: "75x75") %>
  <% end %>
  <% if @diary.day_icon == 'とても元気' %>
    <%= image_tag("mark_face_tere.png", size: "75x75") %>
  <% end %>
  <% if @diary.day_icon == 'とても憂うつ' %>
    <%= image_tag("mark_face_cry.png", size: "75x75") %>
  <% end %>
</p>

